<% if @tasks.present? %>

  <div id="backlog_columns" class="ui stackable two column grid">
    <div class="column">
      <h4 class="ui top header">
        <span class="ui circular label"><%= @tasks.count %></span>
        <%= icon :tasks %>
        <div class="content">Tasks</div>
      </h4>

      <div class="ui piled padded attached green segment">
        <div class="ui relaxed animated small divided list">
          <% @tasks.each do |task| %>
            <div class="item">
              <div class="content">
                <a class="header"><%= link_to task, task %></a>
                <div class="description">Updated 10 mins ago</div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="column">
      <h4 class="ui top header">
        <span class="ui circular label"><%= @bugs.count %></span>
        <%= icon :bug %>
        <div class="content">Bugs</div>
      </h4>

      <div class="ui piled padded attached red segment">
        <div class="ui relaxed animated small divided list">
          <% @bugs.each do |task| %>
            <div class="item">
              <i class="large github middle aligned icon"></i>
              <div class="content">
                <a class="header"><%= link_to task, task %></a>
                <div class="description">Updated 10 mins ago</div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <h4>This project has no tasks. <%= link_to 'Create one now...', new_task_path %></h4>
<% end -%>