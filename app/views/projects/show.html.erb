<% page_title "#{project_context} / #{@project}", head_only: true %>

<div class="page_titles">
  <h1>
    <div class="container project_title">
      <%= link_to project_context %> / <%= link_to @project %>
    </div>
  </h1>
</div>

<main class="container">
  <% if @project.tasks.present? %>

    <div class="tasks">
      <table class="ui very basic table">
        <thead>
          <tr>
            <th></th>
            <th>Type</th>
            <th>Status</th>
            <th>Summary</th>
          </tr>
        </thead>

        <tbody>
          <% @project.tasks.each do |task| %>
            <tr>
              <td align="right"><%= link_to "##{task.sequential_id}", task.path %></td>
              <td><%= task.type %></td>
              <td><%= task.status %></td>
              <td><%= link_to task %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <h4>This project has no tasks. <%= link_to 'Create one now...', new_task_path %></h4>
  <% end -%>
</main>