<% page_title "#{project_context} / #{@project}", subtitle: "New task" %>

<h1></h1>

<%= simple_form_for @task, as: :task, url: tasks_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, collection: Task.types unless @task.contextable.is_a?(User) %>
    <%= hidden_field_tag 'task[type]', 'Task::ToDo' if @task.contextable.is_a?(User) %>
    <%= f.input :summary %>
    <%= f.input :description, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
