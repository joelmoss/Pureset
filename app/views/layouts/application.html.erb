<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title_for_head %>Pureset</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>
  <body class="controller_<%= controller_name %> action_<%= action_name %>">

    <header>
      <div class="container">
        <% if signed_in? %>
          <section class="avatar">
            <%= link_to image_tag("//www.gravatar.com/avatar/#{current_user.gravatar_hash}?s=28", width: 28, height: 28), edit_user_registration_path, class: 'wave' %>
          </section>
        <% else %>
          <section class="signed-out">
            <%= link_to 'Sign Up', new_user_registration_path, class: current_class_for(new_user_registration_path) %>
            <%= link_to 'Sign In', new_user_session_path, class: current_class_for(new_user_session_path) %>
          </section>
        <% end %>

        <section class="logo">
          <%= link_to image_tag('tmp.png', width: 113, height: 72), :root %>
        </section>

        <nav>
          <ul>
            <% if signed_in? %>
              <li><%= link_to icon(:plus, ' Create'), new_task_path, class: current_class_for(new_task_path) %></li>
              <li><%= link_to icon(:suitcase), projects_path, class: current_class_for(projects_path) %></li>
              <% end -%>
          </ul>
        </nav>
      </div>
    </header>

    <%= page_title_for_layout %>

    <main class="container">
      <div>
        <aside>&nbsp;</aside>
        <section>
          <%= semantic_flash %>
          <%= yield %>
        </section>
      </div>
    </main>

  </body>
</html>
