<% page_title 'Sign Up' %>

<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <%= f.input :email, required: true, autofocus: true, placeholder: 'Your email address...' %>
  <%= f.input :username, required: true, placeholder: 'Choose a username...' %>
  <%= f.input :password, required: true, placeholder: 'Choose a password...' %>
  <%= f.input :password_confirmation, required: true, placeholder: 'Type your password again...' %>

  <%= f.button :button, 'Sign Up' %> Already signed up? <%= link_to 'Sign in here!', new_user_session_path %>
<% end %>
